@model List<AIEthicsSurvey.Models.Category>

@{
	ViewBag.Title = "Preliminaries";
}

<div>
	<p>Order the following categories, with most relevant at the top and least relevant at the bottom</p>
	
	<div id="sortable" runat="server">
		@if(Model.Count > 0)
		{
			foreach (var item in Model)
			{
				
				<div class="list-group-item" style="min-height:30px; fill:antiquewhite"><a href="#" id="catDragElement" class="list-group-item list-group-item-action" 
					 style="text-align: center">
					<span id ="catIndex" class="badge badge-dark">@item.Id </span>
					@item.Name
				</a>
				</div>

			}
		}
	</div> 
	
	<input type="hidden" value="" id="catsArray" name="catsArray" />
</div>

